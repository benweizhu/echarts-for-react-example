{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "comma-dangle": ["error", "never"],
    "react/prefer-stateless-function": [2, { "ignorePureComponents": true }],
    "no-param-reassign": ["error", { "props": false }]
  },
  "globals": {
    "document": true,
    "window": true
  }
}
